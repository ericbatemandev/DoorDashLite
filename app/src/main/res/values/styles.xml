<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ItemText.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemText.Secondary">
        <item name="android:textColor">@color/dd_gray</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>
</resources>